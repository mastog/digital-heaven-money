---
import MainLayout from "../layouts/MainLayout.astro";
import Service from "../components/sections/Services.astro";
import Repos from "../components/sections/Repository.astro";
import ForceGraph from "../components/sections/ForceGraph.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import { apiRequest } from '../utils/api';
const response = await apiRequest("/current", "POST", {}, Astro);
if(!response){
    return Astro.redirect('/login');
}
const relationships = await apiRequest('/all_relationship', 'GET',{},Astro)||[];
---

<MainLayout title="Relationship Net">
	<main class="space-y-20 mb-10">
                <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-3">
                        <div class="relative flex flex-col-reverse items-center md:flex-row" id="hero">
                            <div class="row items-center py-5 md:pb-0 md:pt-10">
                                <div class="text-center space-y-10">
                                    <h2 class="text-5xl font-medium leading-none md:text-6xl">We Honor <br> Loved Ones <br> in the Digital Age</h2>
                                    <p class="mt-6 mb-8  text-xl font-normal leading-7 sm:mb-12 text-center"><span class="italic">While time moves forward, love remains timeless.</span> <br/> Begin your legacy journey today - we safeguard memories with the care they deserve, preserving life's fleeting moments as timeless digital heirlooms for generations to come.</p>
                                    <a class="px-9 py-5 bg-zinc-900 hover:bg-white text-white hover:text-black border rounded-2xl justify-items-center md:justify-items-start gap-2.5 inline-flex" rel="noopener noreferrer"  href="https://github.com/mastog/digital-heaven-money" target="_blank">
                                        <h2 class="text-center text-xl font-normal leading-7">Learn more details</h2>
                                    </a>
                                </div>
                            </div>
                        </div>
                </div>
        <div class="w-full max-w-[1280px] mx-auto">
        <SectionTitle
              sectionTitle="Relationship Net"
              description="Honor the Shared Moments and Enduring Connections that Transcend Time"
            />
            </div>
        <section
          class="relative flex flex-col gap-16 mx-auto justify-center items-center text-center max-w-[900px] shadow-xl rounded-2xl overflow-hidden mb-10 min-h-[600px]"
          id="timeLine"
        >
          <!-- 模糊遮罩容器 -->
          <div class="absolute inset-0 z-10 pointer-events-none">
            <!-- 顶部渐变 -->
            <div class="absolute top-0 h-16 w-full bg-gradient-to-b from-white/80 to-transparent"></div>
            <!-- 底部渐变 -->
            <div class="absolute bottom-0 h-16 w-full bg-gradient-to-t from-white/80 to-transparent"></div>
            <!-- 左侧渐变 -->
            <div class="absolute left-0 w-16 h-full bg-gradient-to-r from-white/80 to-transparent"></div>
            <!-- 右侧渐变 -->
            <div class="absolute right-0 w-16 h-full bg-gradient-to-l from-white/80 to-transparent"></div>
          </div>
          <div class="relative flex flex-col gap-20 w-full z-0">
            <ForceGraph links={relationships} />
          </div>
        </section>
	</main>
</MainLayout>