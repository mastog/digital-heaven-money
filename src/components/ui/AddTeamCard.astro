---
import { Image } from "astro:assets";
import linkd from "../../assets/pics/profile-in.svg";
import Card from "./Card.astro";

import p0 from "../../assets/team/d1.png";

const pic = p0;
const name = "";
const role = "";
const description = "Add a private cemetery.";
const link = "#";
---

<Card isUnderline={true}>
  <div class="p-[60px]">
    <div class="flex flex-col sm:flex-row relative">
      <picture class="w-[175px] h-[175px] shrink-0" ><Image src={pic} alt={name} /></picture>
      <div class="flex flex-col justify-end sm:ml-5">
        <h3 class="text-lg font-medium">{name}</h3>
        <p class="text-sm font-normal">{role}</p>
      </div>
    </div>
    <div class="w-full h-[1px] bg-black my-7"></div>
    <div>{description}</div>
  </div>
</Card>
