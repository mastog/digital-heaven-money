---
import p1 from "../../assets/team/d1.png";

const PERSONAL_INFO = {
  name: "Khalil Fong",
  role: "Singer",
  avatar: p1.src,
  about: `A dinner.`,
} as const;

const { role, name, avatar, about } = PERSONAL_INFO;
---
<div class="flex flex-col justify-between">
    <div class="flex flex-col items-center align-middle">
        <div class="mx-4 w-fit rounded-xl bg-white">
            <div class="max-w-screen-lg px-4 md:px-8">
                <div class="grid items-center gap-8 sm:grid-cols-2 mb-[30px]">
                    <div class="flex flex-col items-center justify-center sm:items-start">
                        <p class="mb-4 text-sm font-semibold text-darkgray md:text-base">
                            {role}
                        </p>

                        <h1 class="mb-4 text-center text-2xl font-bold text-black sm:text-left md:text-3xl">
                            {name}
                        </h1>

                        <p class="mb-8 text-center text-black sm:text-left md:text-lg">
                            {about}
                        </p>
                    </div>

                    <div class="relative mx-auto h-fit max-w-xs max-h-xs overflow-hidden rounded-full bg-gray-100 object-cover object-center shadow-lg sm:max-w-md sm:max-h-md">
                        <img
                            src={avatar}
                            alt="Portrait"
                            class="h-full w-full object-cover object-center"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>