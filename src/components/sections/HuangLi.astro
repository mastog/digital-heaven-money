---
import { getYiJiData } from "../../utils/huangli.js";

const today = new Date();
const dateNumber = today.getDate(); // date
const weekDay = ["Sun", "Mon", "Tues", "Wed", "Thur", "Fri", "Sat"][today.getDay()];
const year = today.getFullYear();

// Obtain corresponding "Yi" and "Ji" data
// dynamically generated based on dates or solar terms
const { yi, ji } = getYiJiData(today);
---

<section id="huangli" class="py-10">
  <div class="flex justify-center items-center gap-6">

    <div class="bg-white shadow-md rounded-2xl p-6 w-1/5 border border-gray-200 hover:shadow-lg transition">
      <h2 class="text-xl font-semibold text-green-600 mb-2">Suitable</h2>
      <p class="text-gray-700">{yi}</p>
    </div>

    <div class="bg-gray-100 shadow-md rounded-2xl p-6 w-1/5 border border-gray-200 hover:shadow-lg transition">
      <div class="text-center">
        <div class="text-5xl font-bold text-black">{dateNumber}</div>
        <div class="text-lg text-gray-600 mt-2">{weekDay}</div>
        <div class="text-xl text-gray-800 mt-2">{year}</div>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-2xl p-6 w-1/5 border border-gray-200 hover:shadow-lg transition">
      <h2 class="text-xl font-semibold text-red-600 mb-2">Avoid</h2>
      <p class="text-gray-700">{ji}</p>
    </div>
  </div>
</section>
