---
import { getYiJiData } from "../../utils/huangli.js";
import Card from "../ui/Card.astro";

const today = new Date();
const dateNumber = today.getDate(); // date
const weekDay = ["Sun", "Mon", "Tues", "Wed", "Thur", "Fri", "Sat"][today.getDay()];
const year = today.getFullYear();

// Obtain corresponding "Yi" and "Ji" data
// dynamically generated based on dates or solar terms
const { yi, ji } = getYiJiData(today);
---
<section id="huangli" class="py-10 px-6 flex justify-center items-center">

  <Card>
    <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6 w-full">Traditional Chinese Almanac</h2>

    <!-- Inner Flexbox container -->
    <div class="flex justify-center items-center gap-3 w-full">

      <div class="flex justify-center items-center gap-3">
        <!-- Suitable Card -->
        <div class="bg-white shadow-md rounded-[20px] border border-gray-200 hover:shadow-lg transition w-40 h-40 flex flex-col justify-center items-center">
          <h3 class="text-lg font-semibold text-green-600">Suitable</h3>
          <p class="text-gray-700 text-center mt-2 ">{yi}</p>
        </div>

        <!-- Date and Weekday Card -->
        <div class="bg-gray-100 shadow-md rounded-[20px] border border-gray-200 hover:shadow-lg transition w-40 h-40 flex flex-col justify-center items-center">
          <div class="text-center">
            <div class="text-4xl font-bold text-black">{dateNumber}</div>
            <div class="text-lg text-gray-600 mt-2">{weekDay}</div>
            <div class="text-md text-gray-800 mt-1">{year}</div>
          </div>
        </div>

        <!-- Avoid Card -->
        <div class="bg-white shadow-md rounded-[20px] border border-gray-200 hover:shadow-lg transition w-40 h-40 flex flex-col justify-center items-center">
          <h3 class="text-lg font-semibold text-red-600">Avoid</h3>
          <p class="text-gray-700 text-center mt-2">{ji}</p>
        </div>
      </div>
    </div>
  </Card>
</section>